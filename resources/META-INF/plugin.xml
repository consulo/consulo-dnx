<idea-plugin>
	<id>org.mustbe.consulo.kruntime</id>
	<name>K Runtime</name>
	<version>SNAPSHOT</version>
	<vendor>Must-Be.org</vendor>
	<depends>org.mustbe.consulo.dotnet.core</depends>
	<depends>org.mustbe.consulo.csharp</depends>
	<depends>org.mustbe.consulo.javascript</depends>
	<depends>org.mustbe.consulo.nuget</depends>

	<extensions defaultExtensionNs="com.intellij">
		<sdkType implementation="org.mustbe.consulo.kruntime.bundle.KRuntimeBundleType"/>

		<moduleExtensionProvider key="k-runtime"
								 name="K Runtime"
								 icon="/icons/dotnetFoundation.png"
								 immutableClass="org.mustbe.consulo.kruntime.module.extension.KRuntimeModuleExtension"
								 mutableClass="org.mustbe.consulo.kruntime.module.extension.KRuntimeMutableModuleExtension"/>

		<moduleExtensionProvider key="k-runtime-csharp"
								 parentKey="k-runtime"
								 icon="/icons/dotnetFoundation.png"
								 name="C#"
								 immutableClass="org.mustbe.consulo.kruntime.csharp.module.extension.KRuntimeCSharpModuleExtension"
								 mutableClass="org.mustbe.consulo.kruntime.csharp.module.extension.KRuntimeCSharpMutableModuleExtension"/>

		<editorNotificationProvider implementation="org.mustbe.consulo.kruntime.editor.ProjectJsonEditorNotificationProvider" />
	</extensions>
</idea-plugin>