<idea-plugin>
	<id>consulo.dotnet.core</id>
	<name>.NET Core</name>
	<version>SNAPSHOT</version>
	<vendor>consulo.io</vendor>
	<depends>consulo.dotnet</depends>
	<depends>consulo.csharp</depends>
	<depends>consulo.javascript</depends>
	<depends>consulo.nuget</depends>

	<extensions defaultExtensionNs="consulo.javascript">
		<jomFileDescriptor implementation="consulo.dnx.jom.ProjectFileDescriptor" />
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<sdkType implementation="consulo.dotnet.core.bundle.DotNetCoreBundleType"/>

		<moduleExtensionProvider key="dotnet-core"
								 name=".NET Core"
								 icon="/icons/dotnetFoundation.png"
								 immutableClass="consulo.dnx.module.extension.KRuntimeModuleExtension"
								 mutableClass="consulo.dnx.module.extension.KRuntimeMutableModuleExtension"/>

		<moduleExtensionProvider key="dotnet-core-csharp"
								 parentKey="k-runtime"
								 icon="/icons/dotnetFoundation.png"
								 name="C#"
								 immutableClass="consulo.dnx.csharp.module.extension.KRuntimeCSharpModuleExtension"
								 mutableClass="consulo.dnx.csharp.module.extension.KRuntimeCSharpMutableModuleExtension"/>

		<editorNotificationProvider implementation="consulo.dnx.editor.ProjectJsonEditorNotificationProvider" />

		<configurationType implementation="consulo.dnx.run.KRuntimeRunConfigurationType" />
	</extensions>
</idea-plugin>